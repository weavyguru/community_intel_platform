      const textarea = editDiv.querySelector('.response-textarea');
      const newResponse = textarea.value;

      if (!newResponse.trim()) {
        showToast('Response cannot be empty', 'warning', 'exclamation-triangle');
        return;
      }

      // Optimistic update: Update DOM immediately
      const viewDiv = document.querySelector(`.response-view-${taskIndex}`);
      const responseText = viewDiv.querySelector('p');
      const versionBadge = document.querySelector(`.response-edit-${taskIndex}`).parentElement.querySelector('sl-badge');

      // Store old values for rollback if needed
      const oldResponse = responseText.textContent;
      const oldVersion = versionBadge.textContent;
      const currentVersion = parseInt(oldVersion.replace('v', ''));
      const newVersion = currentVersion + 1;

      // Update UI immediately
      responseText.textContent = newResponse;
      versionBadge.textContent = `v${newVersion}`;
      toggleEditMode(taskIndex, false);
      showToast('Response updated successfully!', 'success', 'check-circle');

      // Save to backend in background
      const response = await fetch(`/api/conversations/${window.currentConversationId}/tasks/${taskIndex}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ suggestedResponse: newResponse })
      });

      const data = await response.json();

      if (!data.success) {
        // Rollback on error
        responseText.textContent = oldResponse;
        versionBadge.textContent = oldVersion;
        showToast('Error: ' + (data.error || 'Failed to save response'), 'danger', 'exclamation-triangle');
      }
    } catch (error) {
      console.error('Save response error:', error);
      showToast('Error saving response', 'danger', 'exclamation-triangle');
      // Could add rollback here too if we stored the old values
    }
  }

  // Listen for task generation Socket.IO events
  socket.on('task-generation:started', (data) => {
    if (data.userId === '<%= user._id %>') {
      document.getElementById('taskGenStatusText').textContent = 'Analyzing sources...';
      document.getElementById('taskGenStatusDetail').textContent = `Processing ${data.totalSources} high-relevance sources`;
    }
  });

  socket.on('task-generation:progress', (data) => {
    if (data.userId === '<%= user._id %>') {
      const stage = data.stage === 'haiku' ? 'Filtering' : 'Analyzing';
      const stageEmoji = data.stage === 'haiku' ? '🔍' : '🤖';
      document.getElementById('taskGenStatusText').textContent = `${stageEmoji} ${stage} source ${data.current} of ${data.total}`;
      document.getElementById('taskGenStatusDetail').textContent = `${data.platform} - ${data.author} | Model: ${data.model}`;
    }
  });

  socket.on('task-generation:complete', (data) => {
    if (data.userId === '<%= user._id %>') {
      document.getElementById('taskGenStatusText').textContent = '✅ Analysis complete!';
      const efficiencyMsg = data.filterEfficiency ? ` | ${data.filterEfficiency} filtered by Haiku` : '';
      document.getElementById('taskGenStatusDetail').textContent = `Generated ${data.tasksGenerated} task suggestions${efficiencyMsg}`;
      setTimeout(() => {
        document.getElementById('taskGenerationStatus').classList.add('hidden');
      }, 2000);
    }
  });

  socket.on('task-generation:error', (data) => {
    if (data.userId === '<%= user._id %>') {
      document.getElementById('taskGenerationStatus').classList.add('hidden');
      showToast('Error generating tasks: ' + data.error, 'danger', 'exclamation-triangle');
    }
  });
</script>
